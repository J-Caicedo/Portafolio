@import 'nib/vendor'
@import 'vendor/flaticon.css'

vendor-prefixes = o ms webkit moz official

primaryColor = #2196F3
secondaryColor = #1976D2
accentColor = #4CAF50
Grey = #B6B6B6
myBlack = #2e3436

/*Animations*/
@keyframes borderBottom__menu
	from
		height 0
		opacity 0
	to
		height 5px
		opacity 1

@keyframes showUp
	from
		left 100%
	to
		left 0

@keyframes hideOut
	from
		left 0
	to
		right 100%

@keyframes shakeUp
	0%
		opacity 1
		top 0
	50%
		opacity .5rem
		top -.8rem
	100%
		opacity 1
		top 0


body
	color myBlack
	font-family 'Karla', sans-serif
	font-size 16px

.jf-links
	color white
	transition all .3s ease
	&:hover
		color primaryColor
// Section Container Master
.container-master
	display flex
	& .container__myself
		width 40%
		background-color myBlack
		color white
		height 100vh
		z-index 2
	& .container__articles
		display flex
		flex-direction column
		width 60%
		height 100vh

// Section Container Myself
.myself
	display flex
	flex-flow column wrap
	height 100%
	box-shadow 2px 0 5px myBlack
	&__container__avatar
		margin 0
		width 55%
		^[0]__avatar
			border 3px solid primaryColor
			width @width
			border-radius 50%
			transition all .2s ease
	&__container__menu
	&__menu__action
	&__menu__action--float
		display none
	&__profile
		display flex
		flex-flow column wrap
		align-items center
		justify-content center
		flex 1 1 auto
		text-align center
	&__container-logo
		margin 0
		width 70%
		^[0]__logo
			width 100%
	&__fullname
		margin 1rem 0 0
		font-weight 400
	&__description
		margin 0 0 1rem
	&__footer
		display flex
		flex-flow row wrap
		justify-content space-around
		&__by
			text-align center
			font-size .85rem
			letter-spacing 1px
			& p
				margin .4rem 0
		&__social
			display flex
			justify-content space-around
			align-items center
			& .myself__footer__link
				padding 0 .5rem
				color white
				text-decoration none
				font-size 1.6rem
				transition all .3s ease
				transform rotate3d(0, 0, 0, 0)
				&:hover
					transform rotate3d(0, 0, 1, -360deg)
					color primaryColor

// Section Container Articles
.container__articles
	overflow-x hidden
	overflow-y scroll
.welcome, .portfolio, .my-tools
	padding 0 4rem
	display none
	^[0]__title
		border-bottom 1px solid Grey
		margin-bottom .5rem
	^[0]__description
		margin .5rem 0 0

// Section Menu
.header
	background-color secondaryColor
	box-shadow 0 2px 4px Grey
	width 100%
	z-index 1
.header__menu
	display flex
	justify-content center
.header__menu-list
	display flex
	margin 0
	padding 0
.header__menu-list__link
	list-style-type none
	color white
	text-decoration none
	padding 1rem 1.1rem
	position relative
	&:after
		content ""
		opacity 0
		position absolute
		left 0
		bottom 0
		width 100%
		height 0
		background-color primaryColor
	&--active:after
		content ""
		opacity 1
		position absolute
		left 0
		bottom 0
		width 100%
		height 5px
		background-color primaryColor
	&:before
		content ""
		opacity 0
		position absolute
		left 0
		top 0
		width 100%
		height 0
		background-color primaryColor
	&--active:before
		content ""
		opacity 1
		position absolute
		left 0
		top 0
		width 100%
		height 5px
		background-color primaryColor
	&:hover:after
		animation-name borderBottom__menu
		animation-duration .3s
		animation-fill-mode forwards
	&:hover:before
		animation-name borderBottom__menu
		animation-duration .3s
		animation-fill-mode forwards

// Section Welcome
.welcome
	display flex
	flex-flow column nowrap
	align-items center
	&__title
		margin-top 1.5rem
	&__description
		margin-bottom 2.5rem
	&__community
		color secondaryColor
		&:hover
			color accentColor

// Section Portfolio
.portfolio
	flex-direction column
	align-items center
	&__blockquote
		border-left 5px solid accentColor
		padding .5rem .4rem
		width 60%
		margin 1rem auto
		background-color rgba(0, 200, 83, .1)
		font-size .95rem
	&__repos
		color myBlack
		&:hover
			color secondaryColor
	&__container-works
		display flex
		flex-flow row wrap
		align-items center
		justify-content center
		flex 1 0 auto
	&__go-to
		text-decoration none
		color white
		&:hover ^[0]__work__description
			background-color primaryColor
	&__work
		display flex
		flex-direction column
		align-items center
		margin .2rem .5rem
		width 8rem
		height auto
		border 1px solid Grey
		border-radius 5px
		&__logo
			width 100%
			padding .5rem 0
		&__description
			background-color accentColor
			width 100%
			padding .3rem 0
			text-align center
			transition .2s all ease
	&__container-educations
		display flex
		flex-direction column
		align-items flex-start
		width 100%
	&__education
		flex 1 0 auto
		display flex
		justify-content center
		align-items center
		border-left 2px solid accentColor
		margin .2rem 0
		transition .2s all ease
		&:hover
			border-left 5px solid secondaryColor
		&:hover &__info
			cursor pointer
			text-decoration underline
		&__image
			width 5rem
		&__info
			color myBlack
			text-decoration none
			p
				margin 0

// Section Tools
.my-tools
	flex-flow column nowrap
	justify-content center
	align-items center
	&__blockquote
		border-left 5px solid accentColor
		align-self flex-start
		padding .5rem .4rem
		width 60%
		margin 1rem auto
		background-color rgba(0, 200, 83, .1)
		font-size .95rem
	&__container-tool
		display flex
		flex-flow row wrap
		margin .5rem 0
.tool
	display flex
	align-items center
	margin .2rem .1rem
	padding .2rem .4rem
	flex 1 1 45%
	font-size .9rem
	&__image
		width 4rem
		padding-right .5rem
	&__resume
		width 80%
.html
	background-color rgba(241, 101, 41, .1)
	border-bottom 2px solid #f16529
.css
	background-color rgba(1, 112, 186, .1)
	border-bottom 2px solid #0170ba
.javascript
	background-color rgba(252, 233, 79, .1)
	border-bottom 2px solid #fce94f
.stylus
	background-color rgba(46, 52, 54, .1)
	border-bottom 2px solid #2e3436
.mongodb
	background-color rgba(78, 177, 63, .1)
	border-bottom 2px solid #4eb13f
.postgresql
	background-color rgba(51, 103, 145, .1)
	border-bottom 2px solid #336791
.node
	background-color rgba(144, 199, 65, .1)
	border-bottom 2px solid #90c741

/* UI Components */
.article--hide
	position relative
	left 100%
	top 0
	animation-name hideOut
	animation-duration .5s
.article--show
	display flex
	position relative
	left 0
	top 0
	animation-name showUp
	animation-duration .5s
.shake-up
	position relative
	top 0
	animation-name shakeUp
	animation-duration .8s
	animation-iteration-count infinite

// *************************** Viewport width ******************************
@media screen and (min-width : 1500px)
	body
		font-size 24px

	// Section menu
	.header
		&__menu-list__link
			padding 1.5rem 2rem
		
	// Section Container Articles
	.welcome, .portfolio, .my-tools
		padding 0 8rem
		margin 3rem 0
	
	// Section container myself
	.myself
		&__footer
			&__by
				font-size 1.2rem
			&__social
				& .myself__footer__link
					font-size 3rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1150px)

	// Section Container myself
	.myself__profile
		font-size .9rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1065px)

	// Section Container myself
	.myself__footer__social
		order -1

// *************************** Viewport width ******************************
@media screen and (max-width : 1014px)
	// Section Container myself
	.myself__profile
		padding 0 1.5rem
	.myself__fullname
		font-size 1.7rem
	
	// Section Container Tools
	.tool
		flex 1 1 auto

// *************************** Viewport width ******************************
@media screen and (max-width : 950px)
	body
		overflow hidden
		position relative
	.blanketBody
		background myBlack
		display none
		height 100vh
		opacity .4
		position fixed
		top 0
		width 100vw
		z-index 4

	// Section Container Master
	.container-master
		flex-direction column
		& .container__myself
		& .container__articles
			width 100%

	// Section Container Avatar
	.container__avatar
		display none
	
	// Section Container Articles
	.container__articles
		display none
	.welcome, .portfolio, .my-tools
		display none
		padding 0 2rem
		&__title
			text-align center
		&__blockquote
			width 100%
	.header
		display none
	
	// Section Container myself
	.myself
		position relative
		border none
		&__menu__action
			display block
			position absolute
			font-size 2.5rem
			right .8rem
			top .5rem
			z-index 1
		&__menu__action--float
			position absolute
			background-color rgba(0, 200, 83, .6)
			color white
			font-size 2rem
			border-radius 50%
			padding .8rem
			bottom 0.7rem
			right .5rem
			z-index 10
			box-shadow 2px 2px 10px myBlack
			&:active
				background-color accentColor
		&__container__menu
			display block
			position fixed
			top 0
			right -100%
			width 55%
			height 100vh
			background-color white
			z-index 11
			padding 0 1rem
			border-left 5px solid accentColor
			.myself__logo
				padding 2em 0 .5rem
				width 100%
			.myself__container__click-me
				display flex
				flex-direction column
				align-items center
				.myself__click-me
					margin 0
					text-align center
					font-size .9rem
			^[0]__menu
				padding .8rem 0
				margin 0
				&__link
					padding 1rem 0
					display block
					align-items center
					color myBlack
					text-decoration none
					font-size 1rem
					& + ^[2]__link
						border-top 1px solid Grey
				&__link--active
					color accentColor
				&__item
					display flex
					.material-icons
						padding-right .5rem
	
	// Section container portfolio
	.portfolio
		&__work
			margin .1rem
			width 7rem
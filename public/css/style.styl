@import 'nib/vendor'
@import 'vendor/flaticon.css'
@import 'url(https://fonts.googleapis.com/css?family=Open+Sans:400,700)'

vendor-prefixes = o ms webkit moz official

Blue = #1e88e5
DarkBlue = #1565c0
aGreen = #00c853
Grey = #a9a9a9
myBlack = #2e3436

/*Animations*/
@keyframes borderBottom__menu
	from
		height 0
		opacity 0
	to
		height 5px
		opacity 1

@keyframes showUp
	from
		left 100%
	to
		left 0

@keyframes hideOut
	from
		left 0
	to
		right 100%

@keyframes shakeUp
	0%
		opacity 1
		top 0
	50%
		opacity .5rem
		top -.8rem
	100%
		opacity 1
		top 0


body
	font 16px 'Lato', sans-serif
	color myBlack

.jf-links
	color white
	transition all .3s ease
	&:hover
		color myBlack
// Section Container Master
.container-master
	display flex
	& .container__myself
		flex 1 1 40%
		background-color Blue
		color white
		height 100vh
	& .container__articles
		display flex
		flex-direction column
		flex 1 1 60%
		height 100vh

// Section Container Myself
.myself
	display flex
	flex-flow column wrap
	height 100%
	border-right 5px solid aGreen
	box-shadow 2px 0 5px Grey
	&__container__avatar
		margin 0
		width 55%
		^[0]__avatar
			border 3px solid DarkBlue
			width @width
			border-radius 50%
	&__container__menu
	&__menu__action
	&__menu__action--float
		display none
	&__profile
		display flex
		flex-flow column wrap
		align-items center
		justify-content center
		flex 1 1 auto
		text-align center
	&__container-logo
		margin 0
		width 80%
		^[0]__logo
			width 100%
	&__fullname
		margin 1rem 0 0
		font-weight 400
	&__description
		margin 0 0 1rem
	&__footer
		display flex
		flex-flow row wrap
		justify-content space-around
		&__by
			text-align center
			font-size .85rem
			letter-spacing 1px
			& p
				margin .4rem 0
		&__social
			display flex
			justify-content space-around
			align-items center
			& .myself__footer__link
				padding 0 .5rem
				color white
				text-decoration none
				font-size 1.6rem
				transition all .2s ease
				&:hover
					color myBlack

// Section Container Articles
.container__articles
	overflow-x hidden
	overflow-y scroll
.welcome, .portfolio, .my-tools
	padding 0 4rem
	display none
	^[0]__title
		border-bottom 1px solid Grey
		margin-bottom .5rem
	^[0]__description
		margin .5rem 0 0

// Section Menu
.header
	background-color DarkBlue
	box-shadow 0 2px 4px Grey
	width 100%
	z-index 1
.header__menu
	display flex
	justify-content center
.header__menu-list
	display flex
	margin 0
	padding 0
.header__menu-list__link
	list-style-type none
	color white
	text-decoration none
	padding 1rem 1.1rem
	position relative
	&:after
		content ""
		opacity 0
		position absolute
		left 0
		bottom 0
		width 100%
		height 0
		background-color Blue
	&--active:after
		content ""
		opacity 1
		position absolute
		left 0
		bottom 0
		width 100%
		height 5px
		background-color Blue
	&:before
		content ""
		opacity 0
		position absolute
		left 0
		top 0
		width 100%
		height 0
		background-color Blue
	&--active:before
		content ""
		opacity 1
		position absolute
		left 0
		top 0
		width 100%
		height 5px
		background-color Blue
	&:hover:after
		animation-name borderBottom__menu
		animation-duration .3s
		animation-fill-mode forwards
	&:hover:before
		animation-name borderBottom__menu
		animation-duration .3s
		animation-fill-mode forwards

// Section Welcome
.welcome
	display flex
	flex-flow column nowrap
	align-items center
	&__community
		color DarkBlue
		&:hover
			color aGreen

// Section Portfolio
.portfolio
	flex-flow column nowrap
	align-items center
	justify-content center
	&__blockquote
		border-left 5px solid aGreen
		padding .5rem .4rem
		width 60%
		margin 1rem auto
		background-color rgba(0, 200, 83, .1)
		font-size .95rem
	&__repos
		color myBlack
		&:hover
			color DarkBlue
	&__container-works
		display flex
		flex-direction row
		justify-content center
		& ^[0]__work
			display flex
			flex-direction column
			justify-content space-between
			align-items center
			margin .1rem .4rem
			width 9rem
			border 1px solid Grey
			border-radius 5px
			&__logo
				width 100%
				padding .5rem
			&__description
				text-align center
				font-weight 700
				background-color aGreen
				color white
				border-top 1px solid Grey
				width 100%
				margin 0
	&__container-educations
		display flex
		flex-direction column
		& ^[0]__education
			display flex
			align-items flex-start
			margin .3rem 0
			border-left 2px solid aGreen
			transition .1s all ease
			&:hover
				border-left 5px solid DarkBlue
			&:hover .portfolio__education__info p
				text-decoration underline
			&__image
				width 4em
			&__info
				text-decoration none
				color myBlack
				& p
					margin 0

// Section Tools
.my-tools
	flex-flow column nowrap
	justify-content center
	align-items center
	&__blockquote
		border-left 5px solid aGreen
		align-self flex-start
		padding .5rem .4rem
		width 60%
		margin 1rem auto
		background-color rgba(0, 200, 83, .1)
		font-size .95rem
	&__container-tool
		display flex
		flex-flow row wrap
		margin .5rem 0
.tool
	display flex
	align-items center
	margin .2rem .1rem
	padding .2rem .4rem
	flex 1 1 45%
	font-size .9rem
	&__image
		width 4rem
		padding-right .5rem
	&__resume
		width 80%
.html
	background-color rgba(241, 101, 41, .1)
	border-bottom 2px solid #f16529
.css
	background-color rgba(1, 112, 186, .1)
	border-bottom 2px solid #0170ba
.javascript
	background-color rgba(252, 233, 79, .1)
	border-bottom 2px solid #fce94f
.stylus
	background-color rgba(46, 52, 54, .1)
	border-bottom 2px solid #2e3436
.node
	background-color rgba(144, 199, 65, .1)
	border-bottom 2px solid #90c741


/* UI Components */
.article--hide
	position relative
	left 100%
	top 0
	animation-name hideOut
	animation-duration .5s
.article--show
	display flex
	position relative
	left 0
	top 0
	animation-name showUp
	animation-duration .5s
.shake-up
	position relative
	top 0
	animation-name shakeUp
	animation-duration .8s
	animation-iteration-count infinite

// *************************** Viewport width ******************************
@media screen and (min-width : 1500px)
	body
		font-size 24px

	// Section menu
	.header
		&__menu-list__link
			padding 1.5rem 2rem
		
	// Section Container Articles
	.welcome, .portfolio, .my-tools
		padding 0 8rem
		margin 3rem 0
	
	// Section container myself
	.myself
		&__footer
			&__by
				font-size 1.2rem
			&__social
				& .myself__footer__link
					font-size 3rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1150px)

	// Section Container myself
	.myself__profile
		font-size .9rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1065px)

	// Section Container myself
	.myself__footer__social
		order -1

// *************************** Viewport width ******************************
@media screen and (max-width : 1014px)
	// Section Container myself
	.myself__profile
		padding 0 1.5rem
	.myself__fullname
		font-size 1.7rem
	
	// Section Container Tools
	.tool
		flex 1 1 auto

// *************************** Viewport width ******************************
@media screen and (max-width : 950px)
	body
		overflow hidden
		position relative
	.blanketBody
		background myBlack
		display none
		height 100vh
		opacity .4
		position fixed
		top 0
		width 100vw
		z-index 1

	// Section Container Master
	.container-master
		flex-direction column

	// Section Container Avatar
	.container__avatar
		display none
	
	// Section Container Articles
	.container__articles
		display none
	.welcome, .portfolio, .my-tools
		display none
		padding 0 2rem
		&__title
			text-align center
		&__blockquote
			width 100%
	.header
		display none
	
	// Section Container myself
	.myself
		position relative
		border none
		&__menu__action
			display block
			position absolute
			font-size 2.5rem
			right .8rem
			top .5rem
			z-index 1
		&__menu__action--float
			position absolute
			background-color rgba(0, 200, 83, .6)
			color white
			font-size 2rem
			border-radius 50%
			padding .8rem
			bottom 0.7rem
			right .5rem
			z-index 10
			box-shadow 2px 2px 10px myBlack
			&:active
				background-color aGreen
		&__container__menu
			display block
			position fixed
			top 0
			right -100%
			width 55%
			height 100vh
			background-color white
			z-index 11
			padding 0 1rem
			border-left 5px solid aGreen
			.myself__logo
				padding 2em 0 .5rem
				width 100%
			.myself__container__click-me
				display flex
				flex-direction column
				align-items center
				.myself__click-me
					margin 0
					text-align center
					font-size .9rem
			^[0]__menu
				padding .8rem 0
				margin 0
				&__link
					padding 1rem 0
					display block
					align-items center
					color myBlack
					text-decoration none
					font-size 1rem
					& + ^[2]__link
						border-top 1px solid Grey
				&__item
					display flex
					.material-icons
						padding-right .5rem